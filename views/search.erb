<h1>Search by Title</h1>


<div class="search">
<form action='/search' method='POST'>
  <input type='text' name='title' />
  <input type='submit' />
</form>

<% if @yes_result %>
	<p><%= @yes_result %></p>
	<p>Year: <%= @movie_year %></p>
	<p>Rating: <%= @movie_rating %></p>


	<button><a href='/cart'>Add to cart</a></button>


<% else %>
	<p>Out of Stock</p> 
<% end %>


<div>
	<a href='/'>Home</a>
</div>
</div>

<div>
	<img src="http://res.cloudinary.com/goodsearch/image/upload/v1412722274/hi_resolution_merchant_logos/redbox_coupons.jpg" class = 'logo' alt = 'logo' />
</div>
